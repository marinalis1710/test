class User:
    def __init__(self, first_name):
        self._first_name = first_name
        self._last_name = ''
        #self.age = ''

    @bot.message_handler(commands=['start', 'help'])
    def send_welcome(message):
            msg = bot.send_message(message.chat.id, "–í–≤–µ–¥—ñ—Ç—å —ñ–º'—è")
            bot.register_next_step_handler(msg, User.process_firstname_step)

    def process_firstname_step(message):
        try:
            user_id = message.from_user.id
            user_data[user_id] = User(message.text)

            msg = bot.send_message(message.chat.id, "–í–≤–µ–¥—ñ—Ç—å –ø—Ä—ñ–∑–≤–∏—â–µ")
            bot.register_next_step_handler(msg, User.start_handler)
        except Exception as e:
            bot.reply_to(message, 'oooops')

    def start_handler(message):
        chat_id = message.chat.id
        text = message.text
        msg = bot.send_message(chat_id, '–°–∫—ñ–ª—å–∫–∏ –≤–∞–º —Ä–æ—á–∫—ñ–≤?')
        bot.register_next_step_handler(msg, User.askAge)


    def askAge(message):
        chat_id = message.chat.id
        text = message.text
        if text.isdigit():
            User.checkAge(message)
            User.get_text_messages(message)
        else:
            msg = bot.send_message(chat_id, '–í—ñ–∫ –ø–æ–≤–∏–Ω–µ–Ω –±—É—Ç–∏ —á–∏—Å–ª–æ–º. –í–≤–µ–¥—ñ—Ç—å —â–µ —Ä–∞–∑, –±—É–¥—å –ª–∞—Å–∫–∞')
            bot.register_next_step_handler(msg, User.askAge)


    def checkAge(message):
        chat_id = message.chat.id
        text = message.text
        if int(text) >= 18:
            msg1 = bot.send_message(chat_id, '–ß—É–¥–æ–≤–æ!')
            bot.register_next_step_handler(msg1, UserIs18.get_text_messages(message))
        else:
            msg = bot.send_message(chat_id, '–í–∞–º –ø–æ–≤–∏–Ω–Ω–æ –±—É—Ç–∏ –±—ñ–ª—å—à–µ 18 —Ä–æ—á–∫—ñ–≤')
            bot.register_next_step_handler(msg, UserNo18.social(message))

    def get_text_messages(message):
        pass

    def social(message):
        pass


class UserIs18(User):
    def get_text_messages(message):
            chat_id = message.chat.id
            text = message.text
            keyboard = telebot.types.InlineKeyboardMarkup()
            key_volonteer = telebot.types.InlineKeyboardButton(text='–í–æ–ª–æ–Ω—Ç–µ—Ä', callback_data='volonteer', url="https://forms.gle/TEykbjoMVVT96DAZ9")
            keyboard.add(key_volonteer)
            key_client = telebot.types.InlineKeyboardButton(text='–ö–ª—ñ—î–Ω—Ç', callback_data='client')
            keyboard.add(key_client)
            bot.send_message(message.from_user.id, text='–û–±–∏—Ä–∞–π, —Ö—Ç–æ —Ç–∏:', reply_markup=keyboard)


class UserNo18(User):
    def social(message):
            keyboard = telebot.types.InlineKeyboardMarkup()
            key_social = telebot.types.InlineKeyboardButton(text='–ú–∏ –Ω–∞ YouTube', callback_data='social',
                                                               url="https://www.youtube.com/watch?v=pBisqepuEVY")
            keyboard.add(key_social)
            bot.send_message(message.from_user.id, text='–ü—ñ–¥–ø–∏—Å—É–π—Å—è –Ω–∞ –Ω–∞—Å —É —Å–æ—Ü. –º–µ—Ä–µ–∂–∞—Ö!', reply_markup=keyboard)



